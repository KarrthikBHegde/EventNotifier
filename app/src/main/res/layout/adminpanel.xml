<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:alpha="0.8"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Spo"
        android:layout_width="349dp"
        android:layout_height="128dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/sports_style"
        android:backgroundTint="#00ACC1"
        android:fadingEdgeLength="10sp"
        android:foregroundTint="#00ACC1"
        android:text="Sports Activity"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <Button
        android:id="@+id/Cult"
        android:layout_width="349dp"
        android:layout_height="128dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/cultural_style"
        android:backgroundTint="#00ACC1"
        android:fadingEdgeLength="10sp"
        android:foregroundTint="#00ACC1"
        android:text="Cultural Activity"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:iconTint="#00ACC1" />

    <Button
        android:id="@+id/Curri"
        android:layout_width="349dp"
        android:layout_height="128dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="354dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/curricular_style"
        android:backgroundTint="#00ACC1"
        android:fadingEdgeLength="10sp"
        android:foregroundTint="#00ACC1"
        android:text="Co-Curricular Activity"
        android:textColor="@color/black"
        android:textColorLink="#00ACC1"
        android:textSize="24sp"
        app:iconTint="#00ACC1" />

    <Button
        android:id="@+id/Semi"
        android:layout_width="349dp"
        android:layout_height="128dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="506dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/seminar_style"
        android:backgroundTint="#00ACC1"
        android:fadingEdgeLength="10sp"
        android:foregroundTint="#00ACC1"
        android:text="Seminar/Webinar"
        android:textColor="@color/black"
        android:textColorLink="#00ACC1"
        android:textSize="24sp"
        app:iconTint="#00ACC1" />

    <Button
        android:id="@+id/logout"
        android:layout_width="121dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="270dp"
        android:layout_marginTop="663dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/sports_style"
        android:backgroundTint="#00ACC1"
        android:fadingEdgeLength="10sp"
        android:foregroundTint="#00ACC1"
        android:text="Logout"
        android:textColor="@color/black"
        android:textSize="18sp" />

</RelativeLayout>